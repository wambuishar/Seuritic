<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.Contacts">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/con_toolbar"
            android:orientation="horizontal"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <ImageView
                android:layout_gravity="center"
                android:onClick="backPressed"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:src="@mipmap/arrow"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp" />
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="@string/help"
                android:textColor="@android:color/white"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_below="@+id/con_toolbar"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                app:cardBackgroundColor="#0fc48484"
                app:cardCornerRadius="2dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:id="@+id/btn_help_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:animateLayoutChanges="true">

                    <TextView
                        android:text="@string/how_does_securitic_work"
                        android:id="@+id/tv_help_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:lineSpacingMultiplier="1.2"
                        android:padding="8dp"
                        android:textColor="#e5bc4949"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_marginTop="-6dp"
                        android:id="@+id/help_1_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1.5px"
                            android:layout_marginEnd="14dp"
                            android:layout_marginStart="14dp"
                            android:background="#d8b1a7a7" />

                        <TextView
                            android:layout_marginTop="4dp"
                            android:id="@+id/tv_help_1_msg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:layout_marginStart="25dp"
                            android:layout_marginLeft="25dp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginRight="15dp"
                            android:lineSpacingMultiplier="1.2"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp"
                            android:paddingBottom="8dp"
                            android:textColor="#615d5d"
                            android:textSize="14sp" />

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                app:cardBackgroundColor="#0fc48484"
                app:cardCornerRadius="2dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:id="@+id/btn_help_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:animateLayoutChanges="true">

                    <TextView
                        android:text="@string/why_securitik"
                        android:id="@+id/tv_help_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:lineSpacingMultiplier="1.2"
                        android:padding="8dp"
                        android:textColor="#e5bc4949"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_marginTop="-6dp"
                        android:id="@+id/help_2_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1.5px"
                            android:layout_marginEnd="14dp"
                            android:layout_marginStart="14dp"
                            android:background="#d8b1a7a7" />

                        <TextView
                            android:layout_marginTop="4dp"
                            android:id="@+id/tv_help_2_msg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:layout_marginStart="25dp"
                            android:layout_marginLeft="25dp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginRight="15dp"
                            android:lineSpacingMultiplier="1.2"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp"
                            android:paddingBottom="8dp"
                            android:textColor="#615d5d"
                            android:textSize="14sp" />

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                app:cardBackgroundColor="#0fc48484"
                app:cardCornerRadius="2dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:id="@+id/btn_help_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:animateLayoutChanges="true">

                    <TextView
                        android:text="@string/em"
                        android:id="@+id/tv_help_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:lineSpacingMultiplier="1.2"
                        android:padding="8dp"
                        android:textColor="#e5bc4949"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_marginTop="-6dp"
                        android:id="@+id/help_3_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1.5px"
                            android:layout_marginEnd="14dp"
                            android:layout_marginStart="14dp"
                            android:background="#d8b1a7a7" />

                        <TextView
                            android:layout_marginTop="4dp"
                            android:id="@+id/tv_help_3_msg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:layout_marginStart="25dp"
                            android:layout_marginLeft="25dp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginRight="15dp"
                            android:lineSpacingMultiplier="1.2"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp"
                            android:paddingBottom="8dp"
                            android:textColor="#615d5d"
                            android:textSize="14sp" />

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>


    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>